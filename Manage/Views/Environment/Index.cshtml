@using Manage.Tools.FileHandler.Abstraction
@using Manage.ViewModels.Environment
@using Core.Constants.File
@using Core.Constants
@using Core
@using System.Globalization

@model IndexViewModel
@inject IFileService _fileService
@inject IUnitOfWork _unitOfWork

@{
    ViewData["Title"] = "Nobel Energy | Environment";
    
    var currentCulture = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
}

@await Component.InvokeAsync("IntroductionBanner", new { Page = Page.Sustainability })

<!--------------------------- Tab --------------------------->

@await Component.InvokeAsync("PageTab", new { page = Page.Sustainability, currentPage = $"{currentCulture}/environment" })

<!--------------------------- Tab --------------------------->
<!--------------------------- Pages Components --------------------------->
<div id="g-pages-component-section">
    @foreach (var environmentSubComponent in Model.EnvironmentSubComponents)
    {
        if (environmentSubComponent.isBanner)
        {
            <div class="g-page-banner">
                <div class="g-page-banner-cover"
                     style="background-image: url('@_fileService.GetFileUrl(environmentSubComponent.PhotoName_Environment, FilePath.Environment)');">
                    <div class="g-page-banner-content">
                        <h2 class="g-page-banner-title">
                            @_unitOfWork.Languages.ChooseLanguage(environmentSubComponent, "Title", currentCulture)
                        </h2>

                        <div class="g-page-banner-text">
                            @Html.Raw(_unitOfWork.Languages.ChooseLanguage(environmentSubComponent, "ContentEnvironment", currentCulture))
                        </div>
                        <a asp-route-culture="@currentCulture" asp-action="component" asp-controller="environment" asp-route-slug="@environmentSubComponent.Slug" class="g-page-banner-anchor-button">
                            @await _unitOfWork.LanguageResources.GetByKeyAsync("ReadMore", currentCulture) 
                        </a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="g-pages-component-element">
                <div class="g-pages-component-element-wrapper">
                    <div class="g-pages-component-element-content">
                        <h2 class="g-pages-component-element-content-title">
                            @_unitOfWork.Languages.ChooseLanguage(environmentSubComponent, "Title", currentCulture)
                        </h2>

                        <div class="g-pages-component-element-content-text">
                            @Html.Raw(_unitOfWork.Languages.ChooseLanguage(environmentSubComponent, "ContentEnvironment", currentCulture))
                        </div>
                        <a asp-route-culture="@currentCulture" asp-action="component" asp-controller="environment" asp-route-slug="@environmentSubComponent.Slug" class="g-pages-component-anchor-button">Read More</a>
                    </div>
                    <div class="g-pages-component-element-image">
                        <img src="@_fileService.GetFileUrl(environmentSubComponent.PhotoName_Environment, FilePath.Environment)">
                    </div>
                </div>
            </div>
        }
    }
</div>
<!--------------------------- Pages Components --------------------------->