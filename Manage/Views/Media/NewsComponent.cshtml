@using Manage.Tools.FileHandler.Abstraction
@using Manage.ViewModels.Media
@using Core.Constants.File
@using Core.Constants
@using Core
@using System.Globalization

@model MediaNewsComponentViewModel
@inject IFileService _fileService
@inject IUnitOfWork _unitOfWork

@{
    ViewData["Title"] = "Nobel Energy | News";

    var currentCulture = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
}

@await Component.InvokeAsync("IntroductionBanner", new { Page = Page.Media })


<!--------------------------- Tab --------------------------->
@await Component.InvokeAsync("PageTab", new { page = Page.Media, currentPage = $"{currentCulture}/media/{Model.News.Slug}" })

<!--------------------------- Tab --------------------------->

<section class="news-section media" id="news">
    <div class="g-container__md media__wrapper">
        <div>
            <img src="@_fileService.GetFileUrl(Model.News.PhotoName, FilePath.News)" class="media__image" alt="">
        </div>
        <div class="mt-5">
            <h1 class="media__title">
                @_unitOfWork.Languages.ChooseLanguage(Model.News, "Title", currentCulture)
            </h1>
        </div>
        <div class="mt-4">
            <p class="media__date">@Model.News.ActionDate.ToString("dd.MM.yyyy")</p>
        </div>
        <div class="media__content">
            <p class="media__content--description">
                @Html.Raw(_unitOfWork.Languages.ChooseLanguage(Model.News, "Content", currentCulture))
            </p>
        </div>
    </div>

    <div class="media__related-news g-container">
        <h3 class="text-center">@await _unitOfWork.LanguageResources.GetByKeyAsync("RecentNews", currentCulture)</h3>
        <div class="news-section__news ">
            <div class="news-wrapper row ">
                @foreach (var news in Model.RecentNews.Take(3))
                {
                    <div class="swiper-slide_card mt-5 col-md-4">
                        <div class="news-section__card ">
                            <div class="news-section__card--img">
                                <img src="@_fileService.GetFileUrl(news.PhotoName, FilePath.News)" alt="">
                            </div>
                            <div class="news-section__card--body">
                                <p class="news-section__card--title">
                                    @_unitOfWork.Languages.ChooseLanguage(news, "Title", currentCulture)
                                </p>
                                <div class="news-section__card--info">
                                    @Html.Raw(_unitOfWork.Languages.ChooseLanguage(news, "Content", currentCulture))
                                </div>
                                <div class="news-section__card--footer">
                                    <a asp-route-culture="@currentCulture" asp-action="newscomponent" asp-controller="media" asp-route-slug="@news.Slug" class="g-btn">
                                        @await _unitOfWork.LanguageResources.GetByKeyAsync("ReadMore", currentCulture)
                                    </a>
                                    <p class="news-section__card--date">@news.ActionDate.ToString("dd.MM.yyyy")</p>
                                </div>
                            </div>
                            <div class="news-section__card--layer">
                                <p class="layer-title">
                                    @_unitOfWork.Languages.ChooseLanguage(news, "Title", currentCulture)
                                </p>
                                <a currentCulture asp-action="newscomponent" asp-controller="media" asp-route-slug="@news.Slug" class="layer-btn g-btn">
                                    @await _unitOfWork.LanguageResources.GetByKeyAsync("ReadMore", currentCulture)
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/Client/js/newsTruncate.js"></script>
}