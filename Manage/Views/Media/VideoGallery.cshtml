@using Manage.Tools.FileHandler.Abstraction
@using Manage.ViewModels.Media
@using Core.Constants.File
@using Core.Constants
@using Core
@using System.Globalization

@model MediaVideoGalleryViewModel
@inject IFileService _fileService
@inject IUnitOfWork _unitOfWork

@{
    ViewData["Title"] = "Nobel Energy | Video gallery";
    
    var currentCulture = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
}

@await Component.InvokeAsync("IntroductionBanner", new { Page = Page.Media })


<!--------------------------- Tab --------------------------->

@await Component.InvokeAsync("PageTab", new { page = Page.Media, currentPage = $"{currentCulture}/media/videogallery" })


<!--------------------------- Tab --------------------------->
<!--------------------------- Video Gallery --------------------------->

<section class="gallery-section">
    <div class="g-container">
        <div class="gallery-section__wrapper">
            <div class="gallery-section__wrapper--iframe">
                @{
                    var videoGalleryComponent = Model.VideoGalleryComponents.FirstOrDefault();
                }
                @if (videoGalleryComponent != null)
                {
                    <iframe src="@videoGalleryComponent.Link" title="YouTube video player"
                            frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen></iframe>
                }
            </div>
            <div class="gallery-carousel">
                <button class="g-btn navigation-btn__prev navigation-btn">
                    <i class="fas fa-chevron-left"></i>
                </button>
                <button class="g-btn navigation-btn__next navigation-btn">
                    <i class="g-btn fas fa-chevron-right"></i>
                </button>
                <div class="gallery-carousel-wrapper">
                    <div class="swiper-wrapper">
                        @foreach (var videoGalleryComponent_ in Model.VideoGalleryComponents)
                        {
                            <div class="swiper-slide">
                                <div class="target-video">
                                    <img src="@_fileService.GetFileUrl(videoGalleryComponent_.PhotoName, FilePath.Gallery)" asp-append-version="true" class="g-fluid thumbnail">
                                    <button data-src="@videoGalleryComponent_.Link" class="g-btn g-btn__md play-btn">
                                        <img src="~/Client/assets/svgs/play.svg" asp-append-version="true">
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!--------------------------- Video  Gallery --------------------------->

@section Scripts{ 
    <script src="~/Client/js/iframe-gallery.js"></script>
}