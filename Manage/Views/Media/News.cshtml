@using Manage.Tools.FileHandler.Abstraction
@using Manage.ViewModels.Media
@using Core.Constants.File
@using Core.Constants
@using Core.Models
@using Core
@using System.Globalization

@model MediaNewsViewModel
@inject IFileService _fileService
@inject IUnitOfWork _unitOfWork

@section Styles{
    <link href="~/Client/styles/css/datepicker/daterangepicker.min.css" rel="stylesheet" />
}

@{
    ViewData["Title"] = "Nobel Energy | News";
    
    var currentCulture = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
}

@await Component.InvokeAsync("IntroductionBanner", new { Page = Page.Media })


<!--------------------------- Tab --------------------------->

@await Component.InvokeAsync("PageTab", new { page = Page.Media, currentPage = "media/news" })

<!--------------------------- Tab --------------------------->
<!--------------------------- News Section --------------------------->

<section class="news-section" id="news">
    <div class="g-container">
        <form asp-route-culture="@currentCulture" asp-action="news" asp-controller="media" method="get">
            <div class="filter-section">
                <div class="datepicker">
                    <input asp-for="DateRange">
                </div>
                <button class="g-btn g-btn__green g-btn__md">Search</button>
            </div>
        </form>

        <div class="news-section__news">
            <div class="news-section__news ">
                <div class="news-wrapper row ">
                    @foreach (var news in Model.News)
                    {
                        <div class="swiper-slide_card mt-5 col-md-4">
                            <div class="news-section__card ">
                                <div class="news-section__card--img">
                                    <img src="@_fileService.GetFileUrl(news.PhotoName, FilePath.News)" alt="">
                                </div>
                                <div class="news-section__card--body">
                                    <div class="news-section__card--title">
                                        @_unitOfWork.Languages.ChooseLanguage(news, "Title", currentCulture)
                                    </div>
                                    <div class="news-section__card--info">
                                        @Html.Raw(_unitOfWork.Languages.ChooseLanguage(news, "Description", currentCulture))
                                    </div>
                                    <div class="news-section__card--footer">
                                        <a asp-action="newscomponent" asp-controller="media" asp-route-slug="@news.Slug" class="g-btn">
                                            @await _unitOfWork.LanguageResources.GetByKeyAsync("ReadMore", currentCulture)
                                        </a>
                                        <p class="news-section__card--date">
                                            @news.ActionDate.ToString("dd.MM.yyyy")
                                        </p>
                                    </div>
                                </div>
                                <div class="news-section__card--layer">
                                    <p class="layer-title">
                                        @_unitOfWork.Languages.ChooseLanguage(news, "Title", currentCulture)
                                    </p>
                                    <a asp-action="newscomponent" asp-controller="media" asp-route-slug="@news.Slug" class="layer-btn g-btn">
                                        @await _unitOfWork.LanguageResources.GetByKeyAsync("ReadMore", currentCulture)
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!--------------------------- Pagination Section --------------------------->
    <div class="pagination-section mt-4" id="pagination">
        <div class="g-container d-flex justify-content-md-end justify-content-center ">
            @if (Model.Pager.TotalPages > 0)
            {
                <ul class="pagination-section__container ">

                    @if (Model.Pager.CurrentPage > 1)
                    {
                        <li class="pagination-section__container--item">
                            <a asp-controller="media" asp-action="news" asp-route-page="@(Model.Pager.CurrentPage - 1)" class="pagination-section__container--link" id="pag-prev">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>
                    }

                    @for (var pge = Model.Pager.StartPage; pge <= Model.Pager.EndPage; pge++)
                    {
                        <li class="pagination-section__container--item @(pge == Model.Pager.CurrentPage ? "active" : "")">
                            <a class="pagination-section__container--link" asp-controller="media" asp-action="news" asp-route-page="@pge">@pge</a>
                        </li>
                    }

                    @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                    {
                        <li class="pagination-section__container--item ">
                            <a asp-controller="media" asp-action="news" asp-route-page="@(Model.Pager.CurrentPage + 1)" class="pagination-section__container--link" id="pag-next">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
    <!--------------------------- Pagination Section --------------------------->
</section>

<!--------------------------- News Section --------------------------->

@section Scripts{
    <script src="~/Client/js/newsTruncate.js" asp-append-version="true"></script>
    <script src="~/Client/js/min/moment.min.js" asp-append-version="true"></script>
    <script src="~/Client/js/min/jquery.daterangepicker.min.js" asp-append-version="true"></script>
    <script src="~/Client/js/datepicker.js" asp-append-version="true"></script>
} 