@using Manage.Tools.FileHandler.Abstraction
@using Manage.ViewModels.Community
@using Core.Constants.File
@using Core.Constants
@using Core
@using System.Globalization

@model ComponentViewModel
@inject IFileService _fileService
@inject IUnitOfWork _unitOfWork

@{
    ViewData["Title"] = "Nobel Energy | Community";
    
    var currentCulture = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
}

@await Component.InvokeAsync("IntroductionBanner", new { Page = Page.Sustainability })

<!--------------------------- Tab --------------------------->

@await Component.InvokeAsync("PageTab", new { page = Page.Sustainability, currentPage = $"{currentCulture}/community" })


<!--------------------------- Tab --------------------------->
<!--------------------------- Pages Components --------------------------->

<div id="g-pages-component-section">
    @{
        bool title = true;
        int order = 0;
    }

    @foreach (var splittedContent in _unitOfWork.Languages.ChooseLanguageList(Model.CommunityComponent, "SplitedContent", currentCulture))
    {
        <div class="g-pages-component-element">
            <div class="g-pages-component-element-wrapper">
                <div class="g-pages-component-element-content">
                    @if (title)
                    {
                        <h2 class="g-pages-component-element-content-title">
                            @Html.Raw(_unitOfWork.Languages.ChooseLanguage(Model.CommunityComponent, "Title", currentCulture))
                        </h2>

                        title = false;
                    }

                    <div class="g-pages-component-element-content-text">
                        @Html.Raw(splittedContent)
                    </div>
                </div>

                @{var photo = Model.CommunityComponent.CommunityComponentPhotos.Skip(order).FirstOrDefault();}

                <div class="g-pages-component-element-image">
                    <img src="@_fileService.GetFileUrl(photo.PhotoName, FilePath.Community)" asp-append-version="true">
                </div>
            </div>
        </div>

        order++;
    }

</div>


<!--------------------------- Pages Components --------------------------->
<!--------------------------- News Section --------------------------->

<section class="news-section" id="news">
    <div class="g-container">
        <h3 class="text-center">@await _unitOfWork.LanguageResources.GetByKeyAsync("CommunityNews", currentCulture) </h3>
        <div class="news-section__news">
            <div class="news-section__news ">
                <div class="news-wrapper row ">
                    @foreach (var news in Model.CommunityNews)
                    {
                        <div class="swiper-slide_card mt-5 col-md-4">
                            <div class="news-section__card c-news">
                                <div class="news-section__card--img">
                                    <img src="@_fileService.GetFileUrl(news.PhotoName, FilePath.News)" alt="">
                                </div>
                                <div class="news-section__card--body">
                                    <p class="news-section__card--title">
                                        @_unitOfWork.Languages.ChooseLanguage(news, "Title", currentCulture)
                                    </p>
                                    <div class="news-section__card--info">
                                        @Html.Raw(_unitOfWork.Languages.ChooseLanguage(news, "Description", currentCulture))
                                    </div>
                                    <div class="news-section__card--footer">
                                        <a asp-route-culture="@currentCulture" asp-action="newscomponent" asp-controller="media" asp-route-slug="@news.Slug" class="g-btn">
                                            @await _unitOfWork.LanguageResources.GetByKeyAsync("ReadMore", currentCulture)
                                        </a>
                                        <p class="news-section__card--date">@news.ActionDate.ToString("dd.MM.yyyy")</p>
                                    </div>
                                </div>
                                <div class="news-section__card--layer">
                                    <p class="layer-title">
                                        @_unitOfWork.Languages.ChooseLanguage(news, "Title", currentCulture)
                                    </p>
                                    <a asp-route-culture="@currentCulture" asp-action="newscomponent" asp-controller="media" asp-route-slug="@news.Slug" class="layer-btn g-btn">
                                        @await _unitOfWork.LanguageResources.GetByKeyAsync("ReadMore", currentCulture)
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!--------------------------- Pagination Section --------------------------->
    <div class="pagination-section mt-4" id="pagination">
        <div class="g-container d-flex justify-content-md-end justify-content-center ">
            @if (Model.Pager.TotalPages > 0)
            {
                <ul class="pagination-section__container ">

                    @if (Model.Pager.CurrentPage > 1)
                    {
                        <li class="pagination-section__container--item">
                            <a asp-route-culture="@currentCulture" asp-controller="community" asp-action="component" asp-route-page="@(Model.Pager.CurrentPage - 1)" class="pagination-section__container--link" id="pag-prev">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>
                    }

                    @for (var pge = Model.Pager.StartPage; pge <= Model.Pager.EndPage; pge++)
                    {
                        <li class="pagination-section__container--item @(pge == Model.Pager.CurrentPage ? "active" : "")">
                            <a class="pagination-section__container--link" asp-route-culture="@currentCulture" asp-controller="community" asp-action="component" asp-route-page="@pge">@pge</a>
                        </li>
                    }

                    @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                    {
                        <li class="pagination-section__container--item ">
                            <a asp-route-culture="@currentCulture" asp-controller="community" asp-action="component" asp-route-page="@(Model.Pager.CurrentPage + 1)" class="pagination-section__container--link" id="pag-next">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
    <!--------------------------- Pagination Section --------------------------->
</section>

<!--------------------------- News Section --------------------------->

@section Scripts{
    <script src="~/Client/js/newsTruncate.js"></script>
}