@using Manage.Areas.Admin.Models.ComponentManagement.News
@using Manage.Tools.FileHandler.Abstraction
@using Core.Constants.File

@inject IFileService _fileService
@model NewsListViewModel

@{
    ViewData["Title"] = "News";
}

<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">News</h4>
        </div>
    </div>
</div>

@if (TempData["message"] != null)
{
    <div class="alert alert-@TempData["message_type"]">
        @TempData["message"]
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <a asp-action="create" asp-controller="news" asp-area="admin" asp type="button" class="btn btn-gradient-primary waves-effect waves-light float-right mb-3">
                        + New News
                    </a>
                </div>

                <div class="table-responsive">

                    <table id="users-table" class="table table-striped mb-0 ">
                        <thead>
                            <tr>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.News.GetEnumerator().Current.Photo)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.News.GetEnumerator().Current.Title_AZ)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.News.GetEnumerator().Current.Title_RU)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.News.GetEnumerator().Current.Title_EN)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.News.GetEnumerator().Current.Title_TR)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.News.GetEnumerator().Current.NewsType)</span>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rowCounter = 0;
                                foreach (var news in Model.News)
                                {
                                    rowCounter++;

                                    news.PhotoPath = _fileService.GetFileUrl(news.PhotoName, FilePath.News);
                                    <tr data-pk="@news.Id">
                                        <td>
                                            <img src="@news.PhotoPath" style="width:200px;object-fit:cover;" />
                                        </td>
                                        <td>@news.Title_AZ</td>
                                        <td>@news.Title_RU</td>
                                        <td>@news.Title_EN</td>
                                        <td>@news.Title_TR</td>
                                        <td>@news.NewsType</td>
                                        <td>
                                            <a asp-controller="news" asp-action="edit" asp-route-id="@news.Id" class="mr-2"><i class="fas fa-edit text-info font-18"></i></a>
                                            <a asp-controller="news" asp-action="details" asp-route-id="@news.Id" class="mr-2"><i class="fas fa-external-link-square-alt text-info font-18"></i></a>
                                            <a asp-controller="news" asp-action="delete" asp-route-id="@news.Id" onclick="return confirm('Are you sure to delete?')" class="mr-2"><i class="fas fa-trash-alt text-danger font-18"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div><!--end /tableresponsive-->
            </div><!--end card-body-->
        </div><!--end card-->
    </div> <!-- end col -->
</div>

@section Scripts{

}