@section scripts{
    <script src="~/Admin/vendor/slug.js"></script>
    <script src="~/Admin/vendor/ckeditor/ckeditor4/ckeditor.js" asp-append-version="true"></script>
    <script src="~/common/js/show_file_name.js"></script>
    <!-- validate js -->
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $('#Title_EN').on('input', function() {
            $('#Slug').val(slug($(this).val()));
        });

        const contents = ["#Content_AZ", "#Content_RU", "#Content_EN", "#Content_TR", "#Description_AZ", "#Description_RU", "#Description_EN", "#Description_TR"];

        for (const content of contents) {
            CKEDITOR.replace(document.querySelector(content), {
                customConfig: '/admin/vendor/ckeditor/ckeditor4/customConfig.js'
            });
        }
    </script>
}
