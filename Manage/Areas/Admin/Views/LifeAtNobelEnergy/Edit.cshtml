</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="col-lg-12">
                    <div>
                        <div class="tab-content" id="files-tabContent">
                            <div class="tab-pane fade active show" id="files-pdf">
                                <h4 class="mt-0 header-title mb-3">
                                    View PDFs (Az)
                                </h4>
                                <div class="file-box-content">
                                    @foreach (var PdfAz in Model.LifeAtNobelEnergyPdf_AZ)
                                    {
                                        var azdfPath = _fileService.GetFileUrl(PdfAz.PdfFileName, FilePath.LifeAtNobelEnergy);
                                        var azPureFileName = _fileService.GetPureFileName(PdfAz.PdfFileName, true);
                                        var azPdfFileSize = _fileService.GetFileSize(PdfAz.PdfFileName, FilePath.LifeAtNobelEnergy, StorageUnits.Megabyte);

                                        <div class="file-box">
                                            <a href="@azdfPath" class="download-icon-link" download="">
                                                <i class="dripicons-download file-download-icon"></i>
                                            </a>
                                            <div class="text-center">
                                                <i class="far fa-file-pdf text-danger"></i>
                                                <h6 class="text-truncate">@azPureFileName</h6>
                                                <small class="text-muted">@azPdfFileSize MB</small>
                                            </div>
                                            <a asp-controller="lifeatnobelenergy" asp-action="deletepdf" asp-route-id="@PdfAz.Id" class="download-icon-link" onclick="return confirm('Are you sure to delete?')">
                                                <i class="dripicons-trash file-download-icon text-danger"></i>
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div><!--end tab-pane-->
                        </div>  <!--end tab-content-->
                    </div><!--end card-body-->

                    <div class="mt-3">
                        <div class="custom-file">
                            <input asp-for="Pdfs_AZ" class="form-control custom-file-input" multiple accept=".pdf" form="life-at-nobel-energy" />
                            <label class="custom-file-label">
                                Add optional az pdfs...
                            </label>
                        </div>
                        <span class="text-danger validate-message d-inline-block py-2" asp-validation-for="Pdfs_AZ"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

