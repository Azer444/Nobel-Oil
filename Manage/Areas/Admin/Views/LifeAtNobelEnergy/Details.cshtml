@using Manage.Areas.Admin.Models.ComponentManagement.LifeAtNobelEnergy

@model LifeAtNobelEnergyDetailsViewModel

@{
    ViewData["Title"] = "Life At Nobel Energy";
}

<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
