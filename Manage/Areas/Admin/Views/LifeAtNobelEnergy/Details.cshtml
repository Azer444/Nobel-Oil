                                <label class="form-control-label" asp-for="Content_TR"></label>
                                <textarea readonly class="form-control" asp-for="Content_TR"></textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="Description_AZ"></label>
