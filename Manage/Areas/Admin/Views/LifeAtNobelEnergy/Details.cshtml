                                <textarea class="form-control" asp-for="Description_TR"><</textarea>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="ActionDate"></label>
                                <input readonly type="date" class="form-control" asp-for="ActionDate">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="d-flex m-0 bold-text" for=""><span>Main Photo</span></label>
                                <img style="width:200px; object-fit:cover;" src="@Model.PhotoPath" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


