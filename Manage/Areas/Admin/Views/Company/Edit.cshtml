                                <span asp-validation-for="TitleCareer_AZ" class="invalid-feedback" style="display:block"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="TitleCareer_RU"></label>
                                <input class="form-control form-control" asp-for="TitleCareer_RU">
