@using Manage.Areas.Admin.Models.ComponentManagement.Company
@using Manage.Tools.FileHandler.Abstraction
@using Core.Constants.File

@inject IFileService _fileService
@model CompanyListViewModel

@{
    ViewData["Title"] = "Company";
}

<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">Company</h4>
        </div>
    </div>
</div>

@if (TempData["message"] != null)
{
    <div class="alert alert-@TempData["message_type"]">
        @TempData["message"]
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <a asp-action="create" asp-controller="company" asp-area="admin" asp type="button" class="btn btn-gradient-primary waves-effect waves-light float-right mb-3">
                        + New Company
                    </a>
                </div>

                <div class="table-responsive">

                    <table id="users-table" class="table table-striped mb-0 ">
                        <thead>
                            <tr>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">Photo</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.Companies.GetEnumerator().Current.Title_AZ)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.Companies.GetEnumerator().Current.Title_RU)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.Companies.GetEnumerator().Current.Title_EN)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.Companies.GetEnumerator().Current.Title_TR)</span>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rowCounter = 0;
                                foreach (var company in Model.Companies)
                                {
                                    rowCounter++;

                                    company.PhotoPath = _fileService.GetFileUrl(company.PhotoName, FilePath.Company);
                                    <tr data-pk="@company.Id">
                                        <td>
                                            <img src="@company.PhotoPath" style="width:200px;object-fit:cover;" />
                                        </td>
                                        <td>@company.Title_AZ</td>
                                        <td>@company.Title_RU</td>
                                        <td>@company.Title_EN</td>
                                        <td>@company.Title_TR</td>
                                        <td>
                                            <a asp-controller="company" asp-action="edit" asp-route-slug="@company.Slug" class="mr-2"><i class="fas fa-edit text-info font-18"></i></a>
                                            <a asp-controller="company" asp-action="delete" asp-route-slug="@company.Slug" onclick="return confirm('Are you sure to delete?')" class="mr-2"><i class="fas fa-trash-alt text-danger font-18"></i></a>
                                            <a asp-controller="company" asp-action="details" asp-route-slug="@company.Slug" class="mr-2"><i class="fas fa-external-link-square-alt text-info font-18"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div><!--end /tableresponsive-->
            </div><!--end card-body-->
        </div><!--end card-->
    </div> <!-- end col -->
</div>

@section Scripts{

}