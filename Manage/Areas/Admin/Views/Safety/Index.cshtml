@using Manage.Areas.Admin.Models.PageManagement.Safety
@using Manage.Tools.FileHandler.Abstraction
@using Core.Constants.File

@model SafetyIndexViewModel
@inject IFileService _fileService

@{
    ViewData["Title"] = "Safety";
}

<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">Safety</h4>
        </div>
    </div>
</div>

@if (TempData["message"] != null)
{
    <div class="alert alert-@TempData["message_type"]">
        @TempData["message"]
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <h3>Component</h3>
                    @if (Model.SafetyComponent == null)
                    {
                        <a asp-action="definecomponent" asp-controller="safety" asp-area="admin" asp type="button" class="btn btn-gradient-primary waves-effect waves-light float-right mb-3">
                            Define component
                        </a>
                    }
                    else
                    {
                        <table id="ourproject-table" class="table table-striped mb-0 ">
                            <thead>
                                <tr>
                                    <th>
                                        <span class="mr-1" style="pointer-events: none;">Photo</span>
                                    </th>
                                    <th>
                                        <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.SafetyComponent.Title_AZ)</span>
                                    </th>
                                    <th>
                                        <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.SafetyComponent.Title_RU)</span>
                                    </th>
                                    <th>
                                        <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.SafetyComponent.Title_EN)</span>
                                    </th>
                                    <th>
                                        <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.SafetyComponent.Title_TR)</span>
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @{
                                            var photoPath = _fileService.GetFileUrl(Model.SafetyComponent.PhotoName, FilePath.Safety);
                                        }
                                        <img src="@photoPath" style="width:200px;object-fit:cover;" />
                                    </td>
                                    <td>@Model.SafetyComponent.Title_AZ</td>
                                    <td>@Model.SafetyComponent.Title_RU</td>
                                    <td>@Model.SafetyComponent.Title_EN</td>
                                    <td>@Model.SafetyComponent.Title_TR</td>
                                    <td>
                                        <a asp-controller="safety" asp-action="editcomponent" class="mr-2"><i class="fas fa-edit text-info font-18"></i></a>
                                        <a asp-controller="safety" asp-action="detailscomponent" class="mr-2"><i class="fas fa-external-link-square-alt text-info font-18"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    }

                </div><!--end /tableresponsive-->
            </div><!--end card-body-->
        </div><!--end card-->
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <h3>Sub Component</h3>
                    <a asp-action="addsubcomponent" asp-controller="safety" asp-area="admin" asp type="button" class="btn btn-gradient-primary waves-effect waves-light float-right mb-3">
                        Add sub-component
                    </a>
                    <table id="ourproject-table" class="table table-striped mb-0 ">
                        <thead>
                            <tr>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">Photo_Safety</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.SafetyComponent.Title_AZ)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.SafetyComponent.Title_RU)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.SafetyComponent.Title_EN)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.SafetyComponent.Title_TR)</span>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var safetySubComponent in Model.SafetySubComponents)
                            {
                                <tr>
                                    <td>
                                        @{
                                            var photoPath_ = _fileService.GetFileUrl(safetySubComponent.PhotoName_Safety, FilePath.Safety);
                                        }
                                        <img src="@photoPath_" style="width:200px;object-fit:cover;" />
                                    </td>
                                    <td>@safetySubComponent.Title_AZ</td>
                                    <td>@safetySubComponent.Title_RU</td>
                                    <td>@safetySubComponent.Title_EN</td>
                                    <td>@safetySubComponent.Title_TR</td>
                                    <td>
                                        <a asp-controller="safety" asp-action="editsubcomponent" asp-route-id="@safetySubComponent.Id" class="mr-2"><i class="fas fa-edit text-info font-18"></i></a>
                                        <a asp-controller="safety" asp-action="detailssubcomponent" asp-route-id="@safetySubComponent.Id" class="mr-2"><i class="fas fa-external-link-square-alt text-info font-18"></i></a>
                                        <a asp-controller="safety" asp-action="deletesubcomponent" asp-route-id="@safetySubComponent.Id"  onclick="return confirm('Are you sure to delete?')" class="mr-2"><i class="fas fa-trash-alt text-danger font-18"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div><!--end /tableresponsive-->

            </div><!--end card-body-->
        </div><!--end card-->

    </div> <!-- end col -->
</div>


@section Scripts{

}