@using Manage.Areas.Admin.Models.PageManagement.LangResource
@using Manage.Tools.FileHandler.Abstraction
@using Core.Constants.File

@inject IFileService _fileService
@model LangResourceIndexViewModel

@{
    ViewData["Title"] = "Language Resource";
}

<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">Language Resource</h4>
        </div>
    </div>
</div>

@if (TempData["message"] != null)
{
    <div class="alert alert-@TempData["message_type"]">
        @TempData["message"]
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">

                    <table id="users-table" class="table table-striped mb-0 ">
                        <thead>
                            <tr>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.LanguageResources.GetEnumerator().Current.ContentKey)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.LanguageResources.GetEnumerator().Current.Content_AZ)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.LanguageResources.GetEnumerator().Current.Content_RU)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.LanguageResources.GetEnumerator().Current.Content_EN)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.LanguageResources.GetEnumerator().Current.Content_TR)</span>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rowCounter = 0;
                                foreach (var languageResource in Model.LanguageResources)
                                {
                                    rowCounter++;

                                    <tr>
                                        <td>@languageResource.ContentKey</td>
                                        <td>@languageResource.Content_AZ</td>
                                        <td>@languageResource.Content_RU</td>
                                        <td>@languageResource.Content_EN</td>
                                        <td>@languageResource.Content_TR</td>
                                        <td>
                                            <a asp-controller="langresource" asp-action="edit" asp-route-id="@languageResource.Id" class="mr-2"><i class="fas fa-edit text-info font-18"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div><!--end /tableresponsive-->
            </div><!--end card-body-->
        </div><!--end card-->
    </div> <!-- end col -->
</div>

@section Scripts{

}