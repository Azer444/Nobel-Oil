@using Core.Models
@model NavTitleComponent

@{
    ViewData["Title"] = "Navbar";
}

<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="index" asp-controller="navbar" asp-area="admin">Navbar Title Components</a></li>
                    <li class="breadcrumb-item active">Components</li>
                </ol>
            </div>
            <h4 class="page-title">Components</h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>

@if (TempData["message"] != null)
{
    <div class="alert alert-@TempData["message_type"]">
        @TempData["message"]
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <h3>Component</h3>
                    <a asp-action="addcomponent" asp-controller="navbar" asp-route-id="@Model.Id" asp-area="admin" asp type="button" class="btn btn-gradient-primary waves-effect waves-light float-right mb-3">
                        Add component
                    </a>
                    <h6>@Model.Title_EN</h6>
                    <table id="ourproject-table" class="table table-striped mb-0 ">
                        <thead>
                            <tr>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.NavComponents.GetEnumerator().Current.Title_AZ)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.NavComponents.GetEnumerator().Current.Title_RU)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.NavComponents.GetEnumerator().Current.Title_EN)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.NavComponents.GetEnumerator().Current.Title_TR)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.NavComponents.GetEnumerator().Current.Link)</span>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var navComponent in Model.NavComponents)
                            {
                                <tr>
                                    <td>@navComponent.Title_AZ</td>
                                    <td>@navComponent.Title_RU</td>
                                    <td>@navComponent.Title_EN</td>
                                    <td>@navComponent.Title_TR</td>
                                    <td>@navComponent.Link</td>
                                    <td>
                                        <a asp-controller="navbar" asp-action="editcomponent" asp-route-id="@navComponent.Id" class="mr-2"><i class="fas fa-edit text-info font-18"></i></a>
                                        <a asp-controller="navbar" asp-action="subcomponents" asp-route-id="@navComponent.Id" class="mr-2"><i class="fas fa-external-link-square-alt text-info font-18"></i></a>
                                        <a asp-controller="navbar" asp-action="deletecomponent" asp-route-id="@navComponent.Id" onclick="return confirm('Are you sure to delete?')" class="mr-2"><i class="fas fa-trash-alt text-danger font-18"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div><!--end /tableresponsive-->

            </div><!--end card-body-->
        </div><!--end card-->

    </div> <!-- end col -->
</div>


@section Scripts{

}