@using Manage.Areas.Admin.Models.PageManagement.OurStrategy
@using Manage.Tools.FileHandler.Abstraction
@using Core.Constants.File

@model OurStrategyIndexViewModel
@inject IFileService _fileService

@{
    ViewData["Title"] = "Our Strategy";
}

<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">Our Strategy</h4>
        </div>
    </div>
</div>

@if (TempData["message"] != null)
{
    <div class="alert alert-@TempData["message_type"]">
        @TempData["message"]
    </div>
}


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <h3>Component</h3>
                    <a asp-action="addcomponent" asp-controller="ourstrategy" asp-area="admin" type="button" class="btn btn-gradient-primary waves-effect waves-light float-right mb-3">
                        Add component
                    </a>
                    <table id="ourproject-table" class="table table-striped mb-0 ">
                        <thead>
                            <tr>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.OurStrategyComponents.GetEnumerator().Current.PhotoName)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.OurStrategyComponents.GetEnumerator().Current.Title_AZ)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.OurStrategyComponents.GetEnumerator().Current.Title_RU)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.OurStrategyComponents.GetEnumerator().Current.Title_EN)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.OurStrategyComponents.GetEnumerator().Current.Title_TR)</span>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ourStrategyComponent in Model.OurStrategyComponents)
                            {
                                <tr>
                                    <td>
                                        @{
                                            var photoPath_ = _fileService.GetFileUrl(ourStrategyComponent.PhotoName, FilePath.OurStrategy);
                                        }
                                        <img src="@photoPath_" style="width:200px;object-fit:cover;" />
                                    </td>
                                    <td>@ourStrategyComponent.Title_AZ</td>
                                    <td>@ourStrategyComponent.Title_RU</td>
                                    <td>@ourStrategyComponent.Title_EN</td>
                                    <td>@ourStrategyComponent.Title_TR</td>
                                    <td>
                                        <a asp-controller="ourstrategy" asp-action="editcomponent" asp-route-id="@ourStrategyComponent.Id" class="mr-2"><i class="fas fa-edit text-info font-18"></i></a>
                                        <a asp-controller="ourstrategy" asp-action="detailscomponent" asp-route-id="@ourStrategyComponent.Id" class="mr-2"><i class="fas fa-external-link-square-alt text-info font-18"></i></a>
                                        <a asp-controller="ourstrategy" asp-action="deletecomponent" asp-route-id="@ourStrategyComponent.Id" onclick="return confirm('Are you sure to delete?')" class="mr-2"><i class="fas fa-trash-alt text-danger font-18"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div><!--end /tableresponsive-->

            </div><!--end card-body-->
        </div><!--end card-->
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <h3>Key Area Component</h3>
                    <a asp-action="addkeyareacomponent" asp-controller="ourstrategy" asp-area="admin" type="button" class="btn btn-gradient-primary waves-effect waves-light float-right mb-3">
                        Add key area component
                    </a>
                    <table id="ourproject-table" class="table table-striped mb-0 ">
                        <thead>
                            <tr>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.KeyAreaComponents.GetEnumerator().Current.PhotoName)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.KeyAreaComponents.GetEnumerator().Current.Title_AZ)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.KeyAreaComponents.GetEnumerator().Current.Title_RU)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.KeyAreaComponents.GetEnumerator().Current.Title_EN)</span>
                                </th>
                                <th>
                                    <span class="mr-1" style="pointer-events: none;">@Html.DisplayNameFor(x => x.KeyAreaComponents.GetEnumerator().Current.Title_TR)</span>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var keyAreaComponent in Model.KeyAreaComponents)
                            {
                                <tr>
                                    <td>
                                        @{
                                            var photoPath_ = _fileService.GetFileUrl(keyAreaComponent.PhotoName, FilePath.OurStrategy);
                                        }
                                        <img src="@photoPath_" style="width:200px;object-fit:cover;" />
                                    </td>
                                    <td>@keyAreaComponent.Title_AZ</td>
                                    <td>@keyAreaComponent.Title_RU</td>
                                    <td>@keyAreaComponent.Title_EN</td>
                                    <td>@keyAreaComponent.Title_TR</td>
                                    <td>
                                        <a asp-controller="ourstrategy" asp-action="editkeyareacomponent" asp-route-id="@keyAreaComponent.Id" class="mr-2"><i class="fas fa-edit text-info font-18"></i></a>
                                        <a asp-controller="ourstrategy" asp-action="detailskeyareacomponent" asp-route-id="@keyAreaComponent.Id" class="mr-2"><i class="fas fa-external-link-square-alt text-info font-18"></i></a>
                                        <a asp-controller="ourstrategy" asp-action="deletekeyareacomponent" asp-route-id="@keyAreaComponent.Id" onclick="return confirm('Are you sure to delete?')" class="mr-2"><i class="fas fa-trash-alt text-danger font-18"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div><!--end /tableresponsive-->

            </div><!--end card-body-->
        </div><!--end card-->

    </div> <!-- end col -->
</div>
